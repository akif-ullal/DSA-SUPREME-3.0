class Solution {
public:

    int solveRec(vector<int>& prices,int i,int buy,int limit)
    {
        if(i==prices.size())
        return 0;

        if(limit==0)
        return 0;

        int profit=0;
        if(buy)
        {
            int profitBuyingTime = -prices[i]+solveRec(prices,i+1,0,limit);
            int BuyingSkippd = solveRec(prices,i+1,1,limit);
            profit=max(profitBuyingTime,BuyingSkippd);
        }
        else
        {
            int profitSellingTime = prices[i]+solveRec(prices,i+1,1,limit-1);
            int SellingSkipped = solveRec(prices,i+1,0,limit);
            profit=max(profitSellingTime,SellingSkipped);
        }
        return profit;
    }

    int solveMem(vector<int>& prices,int i,int buy,int limit,vector<vector<vector<int>>>&dp)
    {
        if(i==prices.size())
        return 0;

        if(limit==0)
        return 0;

        if(dp[i][buy][limit]!=-1)
        return dp[i][buy][limit];

        int profit=0;
        if(buy)
        {
            int profitBuyingTime = -prices[i]+solveMem(prices,i+1,0,limit,dp);
            int BuyingSkippd = solveMem(prices,i+1,1,limit,dp);
            profit=max(profitBuyingTime,BuyingSkippd);
        }
        else
        {
            int profitSellingTime = prices[i]+solveMem(prices,i+1,1,limit-1,dp);
            int SellingSkipped = solveMem(prices,i+1,0,limit,dp);
            profit=max(profitSellingTime,SellingSkipped);
        }
        return dp[i][buy][limit]=profit;
    }

    int solveTab(vector<int>&prices)
    {
        int n=prices.size();
        vector<vector<vector<int>>>dp(prices.size()+1,vector<vector<int>>(2,vector<int>(3,0)));

        for(int i=n-1;i>=0;i--)
        {
            for(int buy=0;buy<2;buy++)
            {
                for(int limit=1;limit<3;limit++)
                {
                    int profit=0;
                    if(buy)
                    {
                        int profitBuyingTime = -prices[i]+dp[i+1][0][limit];
                        int BuyingSkippd = dp[i+1][1][limit];
                        profit=max(profitBuyingTime,BuyingSkippd);
                    }
                    else
                    {
                        int profitSellingTime = prices[i]+dp[i+1][1][limit-1];
                        int SellingSkipped = dp[i+1][0][limit];
                        profit=max(profitSellingTime,SellingSkipped);
                    }
                    dp[i][buy][limit]=profit;
                }
            }
        }
        return dp[0][true][2];
    }

    int solveTabSO(vector<int>&prices)
    {
        int n=prices.size();
        //vector<vector<vector<int>>>dp(prices.size()+1,vector<vector<int>>(2,vector<int>(3,0)));

        vector<vector<int>>curr(2,vector<int>(3,0));
        vector<vector<int>>prev(2,vector<int>(3,0));
        for(int i=n-1;i>=0;i--)
        {
            for(int buy=0;buy<2;buy++)
            {
                for(int limit=1;limit<3;limit++)
                {
                    int profit=0;
                    if(buy)
                    {
                        int profitBuyingTime = -prices[i]+prev[0][limit];
                        int BuyingSkippd = prev[1][limit];
                        profit=max(profitBuyingTime,BuyingSkippd);
                    }
                    else
                    {
                        int profitSellingTime = prices[i]+prev[1][limit-1];
                        int SellingSkipped = prev[0][limit];
                        profit=max(profitSellingTime,SellingSkipped);
                    }
                    curr[buy][limit]=profit;
                }
            }
            prev=curr;
        }
        return prev[true][2];
    }
    int maxProfit(vector<int>& prices) {
        vector<vector<vector<int>>>dp(prices.size()+1,vector<vector<int>>(2,vector<int>(3,-1)));
        //int ans=solveMem(prices,0,true,2,dp);
        int ans=solveTabSO(prices);
        return ans;
    }
};
